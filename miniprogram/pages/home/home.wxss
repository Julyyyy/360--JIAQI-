.searchClass {
  background: #f5f6f8;
  width: 686rpx;
  margin: 0 auto;
  border-radius: 38rpx;
  display: flex;
  align-items: center;
}

.searchClass image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 24rpx;
}

.searchText {
  height: 64rpx;
  margin-left: 16rpx;
}

.searchText-placeholder {
  color: #8e949d;
  font-size: 28rpx;
}

.category-row {
  display: flex;
  flex-flow: wrap;
  color: rgba(49, 53, 60, 1);
  font-size: 28rpx;
  padding: 0 54rpx;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.category-item {
  text-align: center;
}

.category-item image {
  width: 92rpx;
  height: 92rpx;
}

.classLists {
  margin: 70rpx 32rpx 0 32rpx;
}
.swiper-container{
   width: 684rpx;
   height: 300rpx;
   margin: 36rpx auto 56rpx auto;
   display: block; 
}
.swiper-image{
  width: 100%;
  height: 100%;
}